# FertilityOS Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fertilityos
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_use_a_long_random_string
JWT_EXPIRE=24h

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
APP_NAME=FertilityOS
APP_VERSION=1.0.0
HEALTH_PROBE_TIMEOUT_MS=1500

# Stripe Payment Configuration (Optional)
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration
# SMTP settings for sending emails (verification, welcome, invoices)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
MAIL_FROM_ADDRESS=noreply@fertilityos.com
MAIL_FROM_NAME=FertilityOS

# Application URL (for email links)
APP_URL=http://localhost:3000
